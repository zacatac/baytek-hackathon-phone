<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dquid.baytektestapp.PlayActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Name"
        android:id="@+id/gameNameField"
        android:textSize="60dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Game Id"
        android:id="@+id/gameIdField"
        android:layout_below="@+id/gameNameField"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/creditsAddedField"
        android:layout_below="@+id/gameIdField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add 1 credit!"
        android:id="@+id/addCreditButton"
        android:layout_below="@+id/gameModeField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        bootstrap:bb_type="primary"
        bootstrap:bb_roundedCorners="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game is Broken!"
        android:id="@+id/gameBrokenButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addCreditButton"
        bootstrap:bb_type="danger"
        bootstrap:bb_roundedCorners="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done Playing"
        android:id="@+id/doneButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gameBrokenButton"
        bootstrap:bb_type="success"
        bootstrap:bb_roundedCorners="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(debug) upload"
        android:id="@+id/uploadCreditsButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/doneButton"
        bootstrap:bb_type="success"
        bootstrap:bb_roundedCorners="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gameModeField"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_below="@+id/creditsAddedField"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
